<nav class="navbar navbar-expand-lg bg-light">
  <div class="container-fluid">
    <ul class="navbar-nav">
      <% if logged_in? %>
        <li class="nav-item p-3">
          <%= link_to current_person.name, person_articles_path(current_person), class: "nav-link" %>
        </li>
        <li class="nav-item p-3">
          <%= button_to 'Sign out', session_path(current_person), method: :delete, class: "nav-link bg-transparent border-0" %>
        </li>
        <% if request.path[-8..-1] != 'nalytics' %>
          <li class="nav-item p-3">
            <%= link_to 'Analytics', person_analytics_path(current_person), class: "nav-link" %>
          </li>
        <% end %>
        <% if request.path[-8..-1] != 'articles' %>
          <li class="nav-item p-3">
            <%= link_to 'Articles', person_articles_path(current_person), class: "nav-link" %>
          </li>
        <% end %>
      <% else %>
        <% if request.path == '/sessions/new' %>
          <li class="nav-item p-3">
            <%= link_to 'Sign up', new_person_path, class: "nav-link" %>
          </li>
        <% else %>
          <li class="nav-item p-3">
            <%= link_to 'Sign in', new_session_path, class: "nav-link" %>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
</nav>
