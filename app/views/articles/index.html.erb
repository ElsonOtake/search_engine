<main class="container">
  <div class="header">
    <h1>Articles</h1>
    <div data-controller="search">
      <input data-search-target="keyword" data-action="input->search#input" class="keyword" type="text">
      <button data-action="click->search#clear">Clear</button>
    </div>
  </div>
  <p class="found">
    <%= "#{pluralize(@articles.size, "article")} found" %>
  </p>
  <%= render @articles %>
</main>
